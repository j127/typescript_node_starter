# This is the top-most .editorconfig file; do not search in parent directories.
root = true

# For readability, I switched to 4-spaces for languages with
# braces, including: [*.elm, *.js, *.scss, *.css, *.erb]

[*]
end_of_line = LF
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.rb, *.ru, package.json, package-lock.json, *.yaml, *.yml, Gemfile]
indent_size = 2

[Makefile]
indent_style = tab
